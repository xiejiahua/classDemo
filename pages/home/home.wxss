
.page{
  background-color: #f2f6f9;
}

.swiper {
  height: 150px;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.sign_view{
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: row;
  background-color: white;
  margin-top: 1px;
  margin-bottom: 1px;
  padding-top: 10px;
}

.head_icon{
  width: 40px;
  height: 40px;
  margin: 10px;
}

.info_view{
  width: 60%;
  display: flex;
  flex-direction: column;
  font-size: 14px;
  margin-top: 5px;
}

.nick_age{
  font-size: 16px;
  margin-top: 5px;
}

.use_day{
  font-size: 14px;
  color: lightgrey;
}

.sign_btn{
  width: 70px;
  height: 35px;
  border-radius: 20px;
  background-color: #20B2AA;
  color: white;
  font-size: 14px;
  text-align: center;
  margin-top: 10px;
}

.menuView {
  padding-top: 3px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
  width: 100%;
  background-color: #fff;
  padding-bottom: 10px;
}

.menuView button {
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  border: none;
  border-radius: 0;
  line-height: normal;
  align-items: center;
  background-color: unset;
  margin-top: 10px;
}

button::after {
  content: none;
}


.btnView {
  width: 25%;
  height: 60px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 5px;
  padding-top: 5px;
}

.btnView image {
  width: 38px;
  height: 38px;
}

.btnView text {
  font-size: 12px;
  margin-top: 5px;
}

.brView {
  width: 100%;
  height: 6px;
  background-color: #f2f6f9;
}

.spaceView {
  width: 100%;
  height: 4px;
  background-color: #f2f6f9;
}

.rec_view{
  width: 100%;
  margin-top: 10px;
  background-color: white;
}

.rec_title{
  width: 100%;
  height: 30px;
  border-bottom: 1px solid lightgray;
  font-size: 14px;
}

.rec_text{
  color: #00BFFF;
  font-size: 14px;
  margin-left: 10px;
  line-height: 30px;
}



.cellItemView {
  display: flex;
  flex-direction: row;
  width: 90%;
  border-bottom: solid 1px #e7e7e7;
  padding-top: 10px;
  padding-bottom: 5px;

}


.newsImg {
  width: 55px;
  height: 55px;
  margin-left: 5%;
}

.item_left{
  width: 80%;
  height: 65px;
  font-size: 14px;
  padding-left: 5px;
  display: flex;
  flex-direction: column;
  margin-left: 5px;
}

.titleView {
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 14px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 40px;
  width: 100%;
}

.writer{
  font-size: 12px;
  color: lightgrey;
  margin-top: 10px;
}
