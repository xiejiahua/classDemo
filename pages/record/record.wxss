

.page{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.top_view{
  width: 100%;
  height: 80px;
  border-bottom: 1px dashed lightgrey;
  display: flex;
  flex-direction: row;
}

.top_img{
  width: 50px;
  height: 50px;
  margin-top: 15px;
  margin-left: 80px;
}

.list_view{
  width: 100%;
  margin-top: 10px;
}

.item_text{
  width: 100%;
  height: 30px;
  font-size: 14px;
  padding-left: 10px;
  padding-top: 5px;
  padding-bottom: 5px;
  border-bottom: 1px solid gray;
}

.item_img_view{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80px;
  border-bottom: 1px solid gray;
}

.item_img{
  width: 60px;
  height: 60px;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 30px;
}