<view class="topView">
  <view class="upView">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>

  <view class="menu_view">
    <view class="record_view">
      <image class="record_icon" src="../../resource/mine/uc_piao.png"></image>
      <view class="record_text">我的记录</view>
      <image class='right_arrow' src='../../resource/common/scroll_right.png'>〉</image>
    </view>

    <view class="record_view">
      <image class="record_icon" src="../../resource/mine/uc_account.png"></image>
      <view class="record_text">个人信息</view>
      <image class='right_arrow' src='../../resource/common/scroll_right.png'>〉</image>
    </view>

    <view class="record_view">
      <image class="record_icon" src="../../resource/mine/uc_order.png"></image>
      <view class="record_text">我的收藏</view>
      <image class='right_arrow' src='../../resource/common/scroll_right.png'>〉</image>
    </view>

    <view class="record_view">
      <image class="record_icon" src="../../resource/mine/uc_tuan.png"></image>
      <view class="record_text">我的帖子</view>
      <image class='right_arrow' src='../../resource/common/scroll_right.png'>〉</image>

    </view>

  </view>

  <view class="menu_view">
    <view class="setting_view">
      <text>消息推送</text>
      <switch checked="{{true}}" bindchange="msgReceive" />
    </view>
    <view class="setting_view" style="border:0">
      <text>关于APP</text>
    </view>
  </view>
  <button class="btn_logout" type="warn" bindtap="clickToLogout">注销</button>
</view>