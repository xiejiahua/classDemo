.menu_view {
  width: 100%;
  padding: 0 10px;
  background-color: white;
  margin-top: 10px;
}


.cash {
  float: right;
  margin-right: 5px;
}

.record_view {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 50px;
  border-bottom: 1px solid #e7e7e7;
  background-color: white;
  align-items: center;
  text-align: center;
  align-content: center;
}

.record_icon {
  width: 24px;
  height: 24px;
  margin-left: 15px;
  margin-top: 10px;
  margin-bottom: 10px;
  border-radius: 50%;
  float: left;
}

.record_text {
  width: 75%;
  font-size: 10pt;
  float: left;
  padding-top: 10px;
  padding-bottom: 10px;
  margin-left: 10px;
  text-align: left;
}

.right_arrow{
  float: right;
  font-size: 14px;
  margin-right: 10px;
  width: 15px;
  height: 15px;
}

.setting_view {
  display: flex;
  flex-direction: row;
  height: 50px;
  border-bottom: 1px solid #e7e7e7;
  background-color: white;
  align-items: center;
  text-align: center;
  align-content: center;
}

.setting_view text {
  width: 75%;
  font-size: 10pt;
  float: left;
  padding-top: 10px;
  padding-bottom: 10px;
  margin-left: 10px;
  text-align: left;
}

.btn_logout {
  height: 35px;
  width: 94%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20px;
  margin-bottom: 10px;
  font-size: 11pt;
  border-radius: 5px;
}
