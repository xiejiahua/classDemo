.topView {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.upView {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  padding: 10px;
}

.userinfo-avatar {
  width: 65px;
  height: 65px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #181817;
  font-size: 12pt;
  margin-top: 5px;
}

.dataView {
  width: 96%;
  color: #646e51;
  font-size: 10pt;
  text-align: center;
  margin-top: 5px;
}

