
.tab_scroll{
  width: 100%;
  height: 33px;
  display: inline-block;
  white-space: nowrap;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 1000;
  padding-top:10px;
  border-bottom: 1px solid #20B2AA;
  background-color: white;
}

.tab_item{
  width: 60px;
  height: 25px;
  line-height:25px;
  flex-direction: column;
  text-align: center;
  font-size: 10pt;
  align-items: center;
  display: inline-block;
  margin-left: 5px;
  color:#333;
  background-color:#fff;
  padding-bottom: 4px;
}

.on {
  font-weight: bold;
  border-bottom: 2px solid #20B2AA;
  color:#20B2AA;
}

.page{
  margin-top: 40px;
  background-color: #fff;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.cellItemView {
  width: 90%;
  margin: 0 auto;
  border-bottom: solid 1px #e7e7e7;
  padding-top: 10px;
  padding-bottom: 5px;
}


.newsImg {
  width: 55px;
  height: 55px;
  float: right;
}

.item_left{
  width: 80%;
  height: 65px;
  font-size: 14px;
  padding-left: 5px;
  float: left;
  display: flex;
  flex-direction: column;
}

.titleView {
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 14px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 40px;
  width: 100%;
}

.writer{
  font-size: 12px;
  color: lightgrey;
  margin-top: 10px;
}