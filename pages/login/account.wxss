

.page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.icon_view{
  width: 100%;
  height: 150px;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
}

.icon{
  width: 60px;
  height: 60px;
  margin-top: 60px;
}

.phone_view{
  width: 92%;
  margin-left: 4%;
  border-bottom: 1px solid lightgray;
  display: flex;
  flex-direction: row;
  padding-bottom: 5px;
  margin-top: 15px;
}

.phone_icon{
  width: 18px;
  height: 25px;
  margin-left: 12px;
}

.input_phone{
  width: 70%;
  height: 20px;
  font-size: 14px;
  margin-left: 10px;
}

.btn_next{
  width: 60%;
  height: 35px;
  margin-left: 20%;
  margin-top: 40px;
  background-color: #20B2AA;
  border-radius: 10px;
  font-size: 18px;
  text-align: center;
  color: white;
  padding-top: 8px;
}

.login_tip{
  width: 100%;
  margin-top: 150px;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  font-size: 12px;

}
.tip_btn{
  color: #20B2AA;
}

